# Variables d'environnement pour le chatbot business plan

# Clés secrètes (à changer en production)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Clé de chiffrement pour les clés API IA (générer avec Fernet.generate_key())
ENCRYPTION_KEY=your-encryption-key-here

# Base de données
DATABASE_URL=sqlite:///database/app.db

# Tokens de vérification des webhooks
MESSENGER_VERIFY_TOKEN=your_messenger_verify_token_here
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_here

# Configuration Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Configuration par défaut des modèles IA
DEFAULT_AI_PROVIDER=claude
DEFAULT_AI_MODEL=claude-3-haiku-20240307
DEFAULT_MAX_TOKENS=4000
DEFAULT_TEMPERATURE=0.7

# Configuration de l'application
FLASK_ENV=development
FLASK_DEBUG=True

